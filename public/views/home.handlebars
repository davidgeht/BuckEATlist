<link rel="stylesheet" type="text/css" href="../css/home.css"/>
<div class="row">    
    <div class="col" id="mapColumn">
        <nav class="navbar navbar-expand flex-md-row justify-content-start navbar-light bg-light">
            <div>
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active"><a class="nav-link" href="#">My buckEATlist</a></li>
                    <li class="nav-item"><a class="nav-link" href="/noms-map">My Noms Map</a></li>
                    <li class="nav-item"><a class="nav-link" href="/search">Search</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">My Reviews</a></li>
                </ul>
            </div>
        </nav>
        <div id="map"></div>
    </div>
    <div class="col-md-4"id="listColumn">
        <h3>My buckEATlist</h3>
        <div id="restList">
            {{#each restaurants}}          
                <div class="restaurantContrainer row align-items-center">                               
                    <span class="restName col">{{name}}</span>
                    <div class="d-flex flex-row">
                        <button type="button" class="btn btn-success info" data-toggle="modal" data-target="#restInfoModal" data-yelpid="{{yelp_id}}">Info</button>
                        <button class="btn btn-success checkoff" data-id="{{id}}">Check off list</button>
                        <button class="btn btn-danger remove" data-id="{{id}}"><i class="fas fa-times"></i></button>
                    </div>
                </div>
            {{else}}
                <span>you have no restaurants, go add some!</span>
            {{/each}}         
        </div>        
    </div>
</div>

<!-- restaurant info modal-->
<div id="restInfoModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <p>Modal body text goes here.</p>                    
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="modalAddtoList">Check off my list</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div> 

<!-- check off list modal-->
<div id="restCheckOffModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <p>Modal body text goes here.</p>                    
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="modalAddtoList">Submit</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div> 
